<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.ProfileFragment">

    <RelativeLayout
        android:id="@+id/rellay1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#009f7e"
        android:paddingBottom="20dp">

        <RelativeLayout
            android:id="@+id/imgUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/imgCover"
                android:layout_width="135dp"
                android:layout_height="135dp"
                app:cardCornerRadius="250dp"
                android:layout_gravity="center"
                app:cardBackgroundColor="@color/colorWhite">

                <androidx.cardview.widget.CardView
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    app:cardCornerRadius="250dp"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/imgProfile"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop" />

                </androidx.cardview.widget.CardView>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignBottom="@id/imgCover"
                android:layout_marginLeft="105dp"
                android:background="@color/colorWhite"
                app:cardCornerRadius="64dp">

                <ImageView
                    android:id="@+id/iconEdit"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/ic_edit_black_24dp"
                    android:scaleType="centerCrop"
                    android:clickable="true" />

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgUser"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15sp"
            android:fontFamily="sans-serif-light"
            android:textColor="#fff"
            android:textSize="25sp" />


        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif"
            android:textAllCaps="true"
            android:textColor="#ffa73e"
            android:textSize="18sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#009f7e"
        android:layout_below="@+id/rellay1">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/login_shape_bk"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="First name"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="#009f7e "
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="20dp"/>

                <EditText
                    android:id="@+id/etFname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter the first name"
                    android:background="@drawable/forget"
                    android:textColor="#000 "
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textSize="20dp"
                    android:singleLine="true"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last name"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="#009f7e "
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="20dp"/>

                <EditText
                    android:id="@+id/etLname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter the last name"
                    android:background="@drawable/forget"
                    android:textColor="#000 "
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textSize="20dp"
                    android:singleLine="true"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="#009f7e "
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="20dp"/>

                <EditText
                    android:id="@+id/etAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter the address"
                    android:background="@drawable/forget"
                    android:textColor="#000 "
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:singleLine="true"
                    android:textSize="20dp"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="#009f7e "
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="20dp"/>

                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter the email"
                    android:background="@drawable/forget"
                    android:textColor="#000 "
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:singleLine="true"
                    android:textSize="20dp"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="#009f7e "
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="20dp"/>

                <EditText
                    android:id="@+id/etPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter the phone"
                    android:background="@drawable/forget"
                    android:textColor="#000 "
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:singleLine="true"
                    android:textSize="20dp"
                    android:layout_marginTop="5dp"/>

                <Button
                    android:id="@+id/btnSave"
                    android:layout_width="380dp"
                    android:layout_height="55dp"
                    android:text="Save"
                    android:textSize="17dp"
                    android:textColor="#fff"
                    android:background="@drawable/button2"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="30dp"/>

                <Button
                    android:id="@+id/btnChangePassword"
                    android:layout_width="380dp"
                    android:layout_height="55dp"
                    android:text="Change Password"
                    android:textSize="17dp"
                    android:textColor="#fff"
                    android:background="@drawable/button2"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="15dp" />

                <Button
                    android:id="@+id/btnInfo"
                    android:layout_width="380dp"
                    android:layout_height="55dp"
                    android:text="Driver Info"
                    android:textSize="17dp"
                    android:textColor="#fff"
                    android:background="@drawable/button2"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"/>

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

</RelativeLayout>
